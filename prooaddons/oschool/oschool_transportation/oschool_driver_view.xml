<?xml version="1.0"?>
<openerp>
    <data>
        <!-- Driver Information Tree View -->
        <record model="ir.ui.view" id="view_bus_driver_tree">
            <field name="name">bus.driver.tree</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_tree"/>
            <field name="mode">primary</field>
            <field name="priority">20</field>
            <field name="arch" type="xml">
                <xpath expr="//field[@name = 'name']" position="after">
                    <field name="licence_no"/>
                </xpath>
                <xpath expr="//field[@name = 'name']" position="after">
                    <field name="mobile_phone"/>
                </xpath>
                <xpath expr="//field[@name = 'work_phone']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name = 'work_email']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name = 'department_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name = 'parent_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name = 'job_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
            </field>
        </record>

        <!-- Driver Information Form View -->
        <record model="ir.ui.view" id="view_bus_driver_form">
            <field name="name">bus.driver.form</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="mode">primary</field>
            <field name="priority">17</field>
            <field name="arch" type="xml">

                <label for="work_email" position="attributes">
                    <attribute name="invisible">True</attribute>
                </label>
                <field name="work_email" position="attributes">
                    <attribute name="invisible">True</attribute>
                </field>
                <label for="category_ids" position="attributes">
                    <attribute name="invisible">True</attribute>
                </label>
                <field name="category_ids" position="attributes">
                    <attribute name="invisible">True</attribute>
                </field>

                <field name="address_id" position="attributes">
                    <attribute name="invisible">True</attribute>
                </field>

                <field name="work_location" position="attributes">
                    <attribute name="invisible">True</attribute>
                </field>

                <field name="department_id" position="attributes">
                    <attribute name="invisible">True</attribute>
                </field>

                <field name="parent_id" position="attributes">
                    <attribute name="invisible">True</attribute>
                </field>

                <field name="coach_id" position="attributes">
                    <attribute name="invisible">True</attribute>
                </field>

                <field name="company_id" position="attributes">
                    <attribute name="invisible">True</attribute>
                </field>

                <field name="user_id" position="attributes">
                    <attribute name="invisible">True</attribute>
                </field>

                <field name="passport_id" position="attributes">
                    <attribute name="invisible">True</attribute>
                </field>
                <field name="bank_account_id" position="attributes">
                    <attribute name="invisible">True</attribute>
                </field>
                <field name="otherid" position="attributes">
                    <attribute name="invisible">True</attribute>
                </field>
                <field name="job_id" position="attributes">
                    <attribute name="invisible">True</attribute>
                </field>

                <xpath expr="//page[@string='Personal Information']/group/group[position() = 2]"
                       position="replace"></xpath>

                <xpath expr="//page[@string='Personal Information']/group/group[position() = 3]"
                       position="replace"></xpath>

                <xpath expr="//page[@string='Personal Information']/group/group[position() = 1]" position="after">
                    <group string="Birth">
                        <field name="birthday"/>
                    </group>
                </xpath>

                <xpath expr="//field[@name = 'work_location']" position="after">
                    <field name="licence_no"/>
                </xpath>
            </field>
        </record>
        <!-- Driver Information Action -->
        <record model="ir.actions.act_window" id="action_bus_driver_form">
            <field name="name">Driver Information</field>
            <field name="res_model">hr.employee</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context" eval="{'default_job_id':ref('oschool_driver_employee')}"/>
            <field name="domain" eval="[('job_id', '=', ref('oschool_driver_employee'))]"/>
             <field name="help" type="html">
				<p class="oe_view_nocontent_create">Cliquez pour ajouter vos chauffeurs</p>
			</field>
        </record>


        <record model="ir.actions.act_window.view" id="action_bus_driver_form1">
            <field name="sequence" eval="2"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_bus_driver_form"/>
            <field name="act_window_id" ref="action_bus_driver_form"/>
        </record>

        <record model="ir.actions.act_window.view" id="action_bus_driver_form2">
            <field name="sequence" eval="1"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_bus_driver_tree"/>
            <field name="act_window_id" ref="action_bus_driver_form"/>
        </record>
        <menuitem id="transport_diver_management_menu" name="Manage Drivers" parent="transportation_config_menu"
                  action="action_bus_driver_form"/>
    </data>
</openerp>